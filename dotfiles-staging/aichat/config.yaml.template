# see https://github.com/sigoden/aichat/blob/main/config.example.yaml
# All traffic routes through copilot-daemon (localhost:4141)
# Install: scoop bucket add copilot-daemon https://github.com/jack-work/scoop-copilot-daemon
#          scoop install copilot-daemon && copilot-daemon install

model: copilot:claude-opus-4.6
clients:
  - type: openai-compatible
    name: copilot
    api_base: http://localhost:4141
    models:
      # Anthropic Models (via Copilot)
      - name: claude-opus-4.6
      - name: claude-sonnet-4.5
      - name: claude-sonnet-4
      - name: claude-opus-4.5
      - name: claude-opus-41
      - name: claude-haiku-4.5

      # OpenAI Models
      - name: gpt-4.1
      - name: gpt-5
      - name: gpt-5-mini
      - name: gpt-5.1
      - name: gpt-5.1-codex
      - name: gpt-5.1-codex-mini
      - name: gpt-5-codex
      - name: gpt-4o
      - name: gpt-4o-mini
      - name: gpt-4
      - name: gpt-4-o-preview
      - name: gpt-3.5-turbo

      # Google Models
      - name: gemini-3-pro-preview
      - name: gemini-2.5-pro

      # Embedding Models
      - name: text-embedding-ada-002
        type: embedding
      - name: text-embedding-3-small
        type: embedding

agents:
  bob:
    model: "copilot:claude-opus-4.6"
    prompt: "You are a general purpose agent designed to interact with my filesystem and help me write code on Windows."
    temperature: 0.7
